{
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [".js", ".jsx", ".ts", ".tsx"]
            }
        }
    },
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 2017
    },
    "env": {
        "es6": true
    },
    "root": true,
    "rules": {
        // "no-loops/no-loops": 0, // 2 means throw an ERROR
        "no-console": 1,
        "prettier/prettier": 2,
        "no-unused-vars": "warn"
    },
    "parser": "@typescript-eslint/parser",
    "plugins": ["@typescript-eslint", "no-loops", "prettier"],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "ignorePatterns": "*.js"
}
